<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/bluedeep" android:startColor="@color/bluedeep" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/bluelight" android:startColor="@color/bluedeep" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector>